#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Mensaje inicial
echo "ğŸ” Ejecutando Flutter Coverage..."

# Ejecutar las pruebas y generar la cobertura
if output=$(flutter test --coverage); then
   echo "$output"
   
   # Generar el informe HTML y extraer porcentaje
   coverage=$(genhtml coverage/lcov.info -o coverage/html | grep "lines" | awk '{print $2}' | tr -d '.' | cut -d'%' -f1)
   
   if [ -z "$coverage" ]; then
       echo "âŒ Error al obtener la cobertura"
       exit 1
   fi

   echo "ğŸ“Š Porcentaje de cobertura: $coverage%"

   # Verificar umbral de 85%
   if [ "$coverage" -lt 450 ]; then
       echo "âŒ La cobertura ($coverage%) es inferior al 85%"
       exit 1
   fi

   # Abrir el informe
   xdg-open coverage/html/index.html || echo "âš ï¸ Abra manualmente: coverage/html/index.html"
   
   echo "âœ… Coverage ejecutado exitosamente!"
   exit 0
else
   echo "âŒ Fallo en Flutter Coverage: $output"
   exit 1
fi
